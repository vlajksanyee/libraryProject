<Window x:Class="library.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="Add Book" Height="330" Width="308">
	<Grid Background="#FFC9C9C9">
		<TextBox x:Name="abwAuthor" HorizontalAlignment="Left" Height="40" Margin="10,17,0,0" TextWrapping="Wrap" Text="(Author)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949"/>
		<TextBox x:Name="abwTitle" HorizontalAlignment="Left" Height="40" Margin="10,62,0,0" TextWrapping="Wrap" Text="(Title)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949"/>
		<TextBox x:Name="abwYear" HorizontalAlignment="Left" Height="40" Margin="10,107,0,0" TextWrapping="Wrap" Text="(Year Of Publishing)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949"/>
		<TextBox x:Name="abwPublisher" HorizontalAlignment="Left" Height="40" Margin="10,152,0,0" TextWrapping="Wrap" Text="(Publisher)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949"/>
		<TextBox x:Name="abwRental" HorizontalAlignment="Left" Height="40" Margin="10,197,0,0" TextWrapping="Wrap" Text="(Rental Availability)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949"/>
		<Button x:Name="abwAddBT" Content="Add Book" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" Width="272" Height="40" FontSize="20" BorderBrush="Black" Background="#FF555555" Click="AbwAddBT_Click" Foreground="White"/>

	</Grid>
</Window>
