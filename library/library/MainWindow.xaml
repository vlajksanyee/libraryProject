<Window x:Class="library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="808">
	<Grid>
		<DataGrid x:Name="dataGrid"  HorizontalAlignment="Left" Height="360" Margin="10,49,0,0" VerticalAlignment="Top" Width="772">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Book ID" Binding="{Binding bookID}" Width="60"></DataGridTextColumn>
				<DataGridTextColumn Header="Author" Binding="{Binding author}" Width="150"></DataGridTextColumn>
				<DataGridTextColumn Header="Book Title" Binding="{Binding bookTitle}" Width="180"></DataGridTextColumn>
				<DataGridTextColumn Header="Year Of Publishing" Binding="{Binding yearOfPublishing}" Width="110"></DataGridTextColumn>
				<DataGridTextColumn Header="Publisher" Binding="{Binding publisher}" Width="160"></DataGridTextColumn>
				<DataGridTextColumn Header="Rental Availability" Binding="{Binding rentalAvailability}" Width="*"></DataGridTextColumn>
			</DataGrid.Columns>
		</DataGrid>
		<Button x:Name="addBookBT" Content="Add Book" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Height="34" Click="AddBookBT_Click"/>
		<TextBox x:Name="abAuthor" HorizontalAlignment="Left" Height="40" Margin="10,9,0,0" TextWrapping="Wrap" Text="(Author)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949" Visibility="Hidden"/>
		<TextBox x:Name="abTitle" HorizontalAlignment="Left" Height="40" Margin="10,54,0,0" TextWrapping="Wrap" Text="(Title)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949" Visibility="Hidden"/>
		<TextBox x:Name="abYear" HorizontalAlignment="Left" Height="40" Margin="10,99,0,0" TextWrapping="Wrap" Text="(Year Of Publishing)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949" Visibility="Hidden"/>
		<TextBox x:Name="abPublisher" HorizontalAlignment="Left" Height="40" Margin="10,144,0,0" TextWrapping="Wrap" Text="(Publisher)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949" Visibility="Hidden"/>
		<TextBox x:Name="abRental" HorizontalAlignment="Left" Height="40" Margin="10,189,0,0" TextWrapping="Wrap" Text="(Rental Availability)" VerticalAlignment="Top" Width="272" VerticalContentAlignment="Center" FontSize="20" BorderBrush="Black" Background="#FFA8A8A8" Foreground="#FF494949" Visibility="Hidden"/>
		<Button x:Name="abAddBT" Content="Add Book" HorizontalAlignment="Left" Margin="10,234,0,0" VerticalAlignment="Top" Width="272" Height="40" FontSize="20" BorderBrush="Black" Background="#FF555555" Click="AbwAddBT_Click" Foreground="White" Visibility="Hidden"/>
	</Grid>
</Window>
